<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="permissionViewModel"
            type="com.apptec.registrateapp.mainactivity.fpermission.PermissionViewModel" />
    </data>


    <RelativeLayout


        android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:text="No has registrado ningÃºn permiso" />


        <ListView
        android:id="@+id/permission_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:dividerHeight="30dp"
        tools:listitem="permission_element"
            android:visibility="visible"
        android:divider="@drawable/list_view_divider"></ListView>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_permission_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_add"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:onClick="@{() -> permissionViewModel.onAddNewPermission(true)}" />

</RelativeLayout>
</layout>