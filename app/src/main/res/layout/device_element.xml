<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/device_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/black100"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modelo: "
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/black100"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtDeviceModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/black100"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblDeviceImei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMEI: "
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/black100"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/txtDeviceImei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/black100"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblDeviceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: "
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/black100"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtDeviceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habilitado"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/black100"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>